<?xml version="1.0" encoding="utf-8"?>
<android.support.design.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/rootCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_small"
        app:cardBackgroundColor="@color/greensea"
        app:cardCornerRadius="5dp"
        app:cardElevation="@dimen/margin_small">

    <android.support.design.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_small"
            app:cardElevation="0dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10">

                <org.mmtextview.components.MMTextView
                        android:id="@+id/title"
                        style="@style/MyTextTheme"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_margin="@dimen/margin_small"
                        android:layout_weight="8"
                        android:paddingStart="@dimen/margin_small"
                        android:text=" Urgent"
                        android:textStyle="bold" />

                <ImageButton
                        android:id="@+id/editBtn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/btn_border_green"
                        android:clickable="true"
                        android:src="@drawable/ic_edit_black_24dp"
                        android:visibility="visible" />

                <ImageButton
                        android:id="@+id/deleteBtn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/margin_small"
                        android:layout_weight="1"
                        android:background="@drawable/btn_border_red"
                        android:clickable="true"
                        android:src="@drawable/ic_delete_forever_black_24dp"
                        android:visibility="gone" />

            </LinearLayout>

            <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/greensea" />

            <CheckedTextView
                    android:id="@+id/contentTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_small"
                    android:checked="false"
                    android:text="My name is Barry Allen. I am the fastest man alive"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_regular"
                    android:visibility="visible" />

            <EditText
                    android:id="@+id/contentEdtx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_small"
                    android:inputType="text"
                    android:text="My name is Barry Allen. I am the fastest man alive"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_regular"
                    android:visibility="gone" />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/timeStamp"
                        style="@style/MyTextTheme"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_margin="@dimen/padding_small"
                        android:drawableStart="@drawable/ic_timer_black_24dp"
                        android:drawablePadding="@dimen/margin_small"
                        android:gravity="center"
                        android:text="6 : 30 pm"
                        android:textStyle="bold" />

                <TextView
                        android:id="@+id/location"
                        style="@style/MyTextTheme"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_margin="@dimen/padding_small"
                        android:drawableStart="@drawable/ic_location_on_black_24dp"
                        android:drawablePadding="@dimen/margin_small"
                        android:gravity="center"
                        android:text="Kamaryut" />


            </LinearLayout>


        </LinearLayout>

    </android.support.design.card.MaterialCardView>
</android.support.design.card.MaterialCardView>
